{{!< default}}
{{> header}}
<div class="scene_element scene_element--fadeinup">
    <main class="post-loop" role="main">
        {{#foreach posts}}
            <article class="post" role="article" itemscope itemtype="http://schema.org/Article">
                <header>
                    <time class="date" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
                    <h1 class="post-title" itemprop="headline"><a href="{{{url}}}" rel="bookmark">{{title}}</a></h1>
                </header>
                <div class="content" itemprop="articleBody">
                    {{content}}
                </div>
                {{#if tags}}
                <div class="posttags">
                    Tags: {{tags separator=" | "}}
                </div>
                {{/if}}
            </article>
        {{/foreach}}
        {{#if pagination}}
        <div class="pagination">
            {{{pagination}}}
        </div>
        {{/if}}
    </main>
</div>
{{> footer}}